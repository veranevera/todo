html,
body {
    margin: 0;
    padding: 0;
}

body {
    min-width: 230px;
    max-width: 550px;
    margin: 0 auto;
    background: #f5f5f5;

    font: 14px/1.4em 'Helvetica Neue', Helvetica, Arial, sans-serif;
    font-weight: 300;
    color: #4d4d4d;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

:focus {
    outline: 0;
}

h1 {
    position: absolute;
    top: -145px;
    width: 100%;

    font-size: 80px;
    font-weight: 100;
    text-align: center;
    color: rgba(175, 47, 47, 0.15);

    -webkit-text-rendering: optimizeLegibility;
    -moz-text-rendering: optimizeLegibility;
    text-rendering: optimizeLegibility;
}

button {
    margin: 0;
    padding: 0;
    background: none;
    border: 0;

    font-size: 100%;
    font-family: inherit;
    font-weight: inherit;
    color: inherit;
    vertical-align: baseline;

    -webkit-appearance: none;
    appearance: none;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

:global .hidden {
    display: none;
}